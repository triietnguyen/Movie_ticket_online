@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Online_Movie.Models.User
<!-- Section: Design Block -->
<section class="vh-100">
    <!-- Jumbotron -->
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-6 mb-5 mb-lg-0">
                <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card">
                            <div class="card-body py-5 px-md-5">
                                <h3 class="mb-5">Register</h3>
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                            <input asp-for="FirstName" type="text" class="form-control" />
                                            <label asp-for="FirstName" class="form-label" for="form3Example1">First name</label>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                            <input asp-for="LastName" type="text" class="form-control" />
                                            <label asp-for="LastName" class="form-label" for="form3Example2">Last name</label>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                        </div>
                                    </div>

                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <label asp-for="Email" class="form-label" for="form3Example3">Email address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                    <!-- Phone number input -->
                                    <div class="form-outline mb-4">
                                    <input asp-for="Phone" type="tel" class="form-control" />
                                    <label asp-for="Phone" class="form-label" for="form3Example3">Phone number</label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                    <!-- Username input -->
                                    <div class="form-outline mb-4">
                                    <input asp-for="UserName" type="text" class="form-control" />
                                    <label asp-for="UserName" class="form-label" for="form3Example3">Username</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Submit button -->
                                    <button type="submit" value="Create" class="btn btn-primary btn-block mb-4">
                                        Sign up
                                    </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->