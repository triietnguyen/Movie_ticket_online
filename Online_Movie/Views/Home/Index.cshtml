@model List<Online_Movie.Models.Movie>

    
<style>
        h1 {
            border-bottom: 2px solid #868580;
            text-shadow: 1px 1px 1px #000;
        }



    </style>

    <section class="mainContent">
        <div class="container-fluid w-100">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/img1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/img2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/img3.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/img4.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>

                </button>
            </div>
        </div>
    </section>
   

<section class="featured">
    <div class="container">
        <h1 class="mt-4">Phim đang chiếu</h1>
            <div class="row">
                @foreach (var toy in Model)
                {
                
                    <div class="col-lg-3 col-md-4 col-sm-6 group-item">
                        <div class="featured__item">   
                            <a asp-action="ViewMovieDetails" asp-controller="Home">
                                <div class="featured__item__pic">
                                    <img src="~/images/@toy.Image">
                                   
                                </div>
                    
                                <div class="product__item__text">
                                    <h2>@toy.MovieName</h2>
                                    <h3>@toy.Price VND</h3>                    
                                </div>
                                    </a>
                        </div>
                    </div>
                
                }
            </div> 
    

            <div class="row">
                <div class="col">
                    <div class="product-pagination text-center">
                        <nav>
                            <ul class="pagination">
                                <li>
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
    </div>
</section>

  




